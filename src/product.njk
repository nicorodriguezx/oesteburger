---
layout: base.njk
title: Product Details
---

<main class="product-page" id="product-page">
    <img id="product-image" alt="Product Image" loading="lazy">
    <div class="product-details">
        <h1 id="product-title"></h1>
        <p id="product-details"></p>
        <h5 id="product-price"></h5>
        <a href="/">Volver</a>
    </div>
</main>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    const productId = urlParams.get('product');

    const products = {
        "superpanchos": {
            title: "60 SUPERPANCHOS + PANES",
            image: "/images/left-image.webp",
            details: "Incluye 10 paquetes de 300gr con 6 salchichas marca Cabaña Santamarina + 10 paquetes de 360gr con 6 panes marca El Rocío.",
            price: "$28.500"
        },
        "hamburguesas": {
            title: "40 HAMBURGUESAS + PANES",
            image: "/images/middle-image.webp",
            details: "Incluye 20 paquetes de 220gr con 2 hamburguesas marca Oeste Burger + 10 paquetes de 360gr con 4 panes marca El Rocío.",
            price: "$31.500"
        },
        "papasfritas": {
            title: "10KG PAPAS FRITAS",
            image: "/images/right-image.webp",
            details: "Incluye 10 kilos de papas fritas congeladas marca Finca Balcarce (en 4 bolsas de 2 kilos y medio cada una).",
            price: "$30.000"
        }
    };

    if (products[productId]) {
        document.getElementById('product-title').innerText = products[productId].title;
        document.getElementById('product-image').src = products[productId].image;
        document.getElementById('product-details').innerText = products[productId].details;
        document.getElementById('product-price').innerText = products[productId].price;
    } else {
        document.getElementById('product-title').innerText = "Product Not Found";
        document.getElementById('product-details').innerText = "The product you are looking for does not exist.";
    }
</script>

